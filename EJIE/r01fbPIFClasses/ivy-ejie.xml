<?xml version="1.0" encoding="ISO-8859-1"?>
<ivy-module version="2.3"
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd"
			xmlns:e="http://ant.apache.org/ivy/extra"
			xmlns:m="http://ant.apache.org/ivy/maven">

	<info organisation="com.ejie.r01.r01fb"
			module="r01fbPIFClasses"
			revision="1.5.0"
			status="integration">
	</info>

	<configurations>
		<conf name="default" extends="runtime,master" visibility="public"  description="runtime dependencies and master artifact can be used with this conf" />
		<conf name="master"                           visibility="public"  description="contains only the artifact published by this module itself, with no transitive dependencies"/>
		<conf name="compile"                          visibility="public"  description="this is the default scope, used if none is specified. Compile dependencies are available in all classpaths."/>
		<conf name="runtime" extends="compile"        visibility="public"  description="this scope indicates that the dependency is not required for compilation, but is for execution. It is in the runtime and test classpaths, but not the compile classpath." />

		<conf name="sources"                          visibility="public"  description="this configuration contains the source artifact of this module, if any."/>
		<conf name="javadoc"                          visibility="public"  description="this configuration contains the javadoc artifact of this module, if any."/>

		<conf name="test"    extends="runtime"        visibility="private" description="this scope indicates that the dependency is not required for normal use of the application, and is only available for the test compilation and execution phases." />

		<conf name="provided"                         visibility="public"  description="this is much like compile, but indicates you expect the JDK or a container to provide it. It is only available on the compilation classpath, and is not transitive."/>

		<conf name="system"                           visibility="public"  description="this scope is similar to provided except that you have to provide the JAR which contains it explicitly. The artifact is always available and is not looked up in a repository."/>
		<conf name="optional"                         visibility="public"  description="contains all optional dependencies"/>
	</configurations>

	<publications>
		<artifact name="r01fbPIFClasses" type="bundle" ext="jar"  conf="master"/>
		<artifact name="r01fbPIFClasses" type="pom" ext="pom" />
		<artifact name="r01fbPIFClasses" type="source" ext="jar"  conf="sources" />
		<artifact name="r01fbPIFClasses" type="javadoc" ext="jar" conf="javadoc" />
	</publications>


	<dependencies>
		<!-- ============================================================================================================================== -->
		<!-- R01                                                                                                                            -->
		<!-- ============================================================================================================================== -->
		<dependency org="com.ejie.r01.r01fb" name="r01fbEJIEClasses" rev="1.5.0"
					conf="compile->compile,master;runtime->runtime"/>

		<dependency org="com.ejie.r01.r01fb" name="r01fbXLNetsClasses" rev="1.5.0"
					conf="compile->compile,master;runtime->runtime"/>
		
		<dependency org="com.ejie.r01.r01fb" name="r01fbDocumentClasses" rev="1.5.0"
					conf="compile->compile,master;runtime->runtime"/>

		<!-- ============================================================================================================================== -->
		<!-- PIF                                                                                                                            -->
		<!-- ============================================================================================================================== -->
		<!-- pif client libs -->
		<dependency org="com.ejie" name="y31c" rev="1.4"
					conf="compile->*;runtime->*"
					transitive="false">
			<artifact name="y31c" m:classifier="impl" type="jar" ext="jar"/>
		</dependency>
		<dependency org="com.ejie" name="y31b" rev="1.4"
					conf="compile->*;runtime->*"
					transitive="false">
			<artifact name="y31b" m:classifier="ifaz" type="jar" ext="jar"/>
		</dependency>

		<!-- hadoop -->
		<dependency org="org.apache.hadoop" name="hadoop-core" rev="1.0.3"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>
		
		<dependency org="org.apache.hadoop" name="hadoop-client" rev="1.0.3"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>

		<!-- utils -->
		<dependency org="commons-collections" name="commons-collections" rev="3.2.2"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>
		<dependency org="commons-configuration" name="commons-configuration" rev="1.9"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>
		<dependency org="eu.medsea.mimeutil" name="mime-util" rev="2.1.3"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>	<!-- MIME detection utils at: https://sourceforge.net/projects/mime-util/ or https://github.com/mimeutil/MimeUtil -->

		<!-- httpclient -->
		<dependency org="commons-httpclient" name="commons-httpclient" rev="3.0.1"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>	<!-- r01f uses the new org.apache.httpcomponents.httpclient -->
		<dependency org="org.mortbay.jetty" name="jetty-util" rev="6.1.26"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>

		<!-- json -->
		<dependency org="net.sf.json-lib" name="json-lib" rev="2.4"
					conf="runtime,compile->default"
					transitive="false">
			<artifact name="json-lib" m:classifier="jdk15" type="jar" ext="jar"/>
		</dependency>
		<dependency org="net.sf.flexjson" name="flexjson" rev="2.1"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>

		<!-- ============================================================================================================================== -->
		<!-- Logging EJIE: Momo  (needed by PIF)                                                                                            -->
		<!-- ============================================================================================================================== -->
		<!-- ejie log client lib -->
		<dependency org="com.ejie" name="w43ta" rev="2.4"
					conf="runtime,compile->default"
					transitive="false"/>

		<!-- metrics 4.0.2 is just for JDK 1.8  -->
		<!--<dependency org="io.dropwizard.metrics" name="metrics-core" rev="4.0.2" transitive="false"/> -->
		<dependency org="io.dropwizard.metrics" name="metrics-core" rev="3.1.2"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>

		<!-- serialization -->

		<dependency org="org.apache.avro" name="avro" rev="1.8.2"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>

		<!-- beware that a newest version of jackson (com.fasterxml.jackson.core) is also imported at [r01fbObjectStreamerClasses]-->
		<!--
		<dependency org="com.fasterxml.jackson.core" name="jackson-core" rev="2.9.0"
					conf="compile->compile,master;runtime->runtime" />
		
		<dependency org="com.fasterxml.jackson.core" name="jackson-databind" rev="2.9.0"
					conf="compile->compile,master;runtime->runtime" />
		-->
		<dependency org="org.codehaus.jackson" name="jackson-core-asl" rev="1.9.13"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>
		
		<dependency org="org.codehaus.jackson" name="jackson-mapper-asl" rev="1.9.13"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>

		<!-- http components -->
		<!-- beware that apache httpcomponents is also imported at [r01fbHttpClientClasses] -->
		<dependency org="org.apache.httpcomponents" name="httpcore" rev="4.3.3"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>
		
		<dependency org="org.apache.httpcomponents" name="httpclient" rev="4.3.3"
					conf="compile->compile,master;runtime->runtime"
					transitive="false"/>

	</dependencies>
</ivy-module>
