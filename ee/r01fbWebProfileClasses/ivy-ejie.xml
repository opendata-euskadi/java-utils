<?xml version="1.0" encoding="ISO-8859-1"?>
<ivy-module version="2.3"
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd"
			xmlns:e="http://ant.apache.org/ivy/extra"
			xmlns:m="http://ant.apache.org/ivy/maven">

	<info organisation="com.ejie.r01.r01fb"
			module="r01fbWebProfileClasses"
			revision="1.5.0"
			status="integration">
	</info>

	<configurations>
		<conf name="default" extends="runtime,master" visibility="public"  description="runtime dependencies and master artifact can be used with this conf" />
		<conf name="master"                           visibility="public"  description="contains only the artifact published by this module itself, with no transitive dependencies"/>
		<conf name="compile"                          visibility="public"  description="this is the default scope, used if none is specified. Compile dependencies are available in all classpaths."/>
		<conf name="runtime" extends="compile"        visibility="public"  description="this scope indicates that the dependency is not required for compilation, but is for execution. It is in the runtime and test classpaths, but not the compile classpath." />

		<conf name="sources"                          visibility="public"  description="this configuration contains the source artifact of this module, if any."/>
		<conf name="javadoc"                          visibility="public"  description="this configuration contains the javadoc artifact of this module, if any."/>

		<conf name="test"    extends="runtime"        visibility="private" description="this scope indicates that the dependency is not required for normal use of the application, and is only available for the test compilation and execution phases." />

		<conf name="provided"                         visibility="public"  description="this is much like compile, but indicates you expect the JDK or a container to provide it. It is only available on the compilation classpath, and is not transitive."/>

		<conf name="system"                           visibility="public"  description="this scope is similar to provided except that you have to provide the JAR which contains it explicitly. The artifact is always available and is not looked up in a repository."/>
		<conf name="optional"                         visibility="public"  description="contains all optional dependencies"/>
	</configurations>

	<publications>
		<artifact name="r01fbWebProfileClasses" type="bundle" ext="jar"  conf="master"/>
		<artifact name="r01fbWebProfileClasses" type="pom" ext="pom" />
		<artifact name="r01fbWebProfileClasses" type="source" ext="jar"  conf="sources" />
		<artifact name="r01fbWebProfileClasses" type="javadoc" ext="jar" conf="javadoc" />
	</publications>
	
	<dependencies>
		<!-- ============================================================================================================================== -->
		<!-- R01                                                                                                                            -->
		<!-- ============================================================================================================================== -->
		<dependency org="com.ejie.r01.r01fb" name="r01fbHttpClientClasses" rev="1.5.0"
					conf="compile->compile,master;runtime->runtime"/>
		<!-- ============================================================================================================================== -->
		<!-- Servlet API                                                                                                                    -->
		<!-- ============================================================================================================================== -->
		<!-- beware that when deploying to a servlet 3.0 capable container the dependency should be changed to rev="3.1.0"
		     BUT if this change is NOT done, the servlet-api dependency MUST be excluded from the deployment assembly
		     (do NOT include the ivy.xml (default) library in the deployment assembly -->
		<dependency org="javax.servlet" name="servlet-api" rev="2.5" 
					conf="compile->compile,master;runtime->runtime" />
		
		<!-- ============================================================================================================================== -->
		<!-- Guice Web                                                                                                                      -->
		<!-- ============================================================================================================================== -->
		<dependency org="com.google.inject.extensions" name="guice-servlet" rev="4.1.0"
					conf="compile->compile,master;runtime->runtime" /> 
		
		<!-- ============================================================================================================================== -->
		<!-- File Upload                                                                                                                    -->
		<!-- ============================================================================================================================== -->
		<dependency org="commons-fileupload" name="commons-fileupload" rev="1.3.1"
					conf="compile->compile,master;runtime->runtime">
			<exclude org="commons-io" name="commons-io" />
		</dependency>
		    
		<!-- ============================================================================================================================== -->
		<!-- Jersey                                                                                                                         -->
		<!-- ============================================================================================================================== -->
		<dependency org="javax.ws.rs" name="jsr311-api" rev="1.1.1" 
					conf="compile->compile,master;runtime->runtime" />
		
		<dependency org="com.sun.jersey" name="jersey-core" rev="1.19.4" 
					conf="compile->compile,master;runtime->runtime" />
		
		<dependency org="com.sun.jersey" name="jersey-servlet" rev="1.19.4"
					conf="compile->compile,master;runtime->runtime" /> 
		
		<!-- <dependency org="com.sun.jersey" name="jersey-json" rev="1.19.4"
						 conf="compile->compile,master;runtime->runtime" /> -->
		
		<dependency org="com.sun.jersey" name="jersey-server" rev="1.19.4"
					conf="compile->compile,master;runtime->runtime">
			<exclude org="asm"/>	<!-- asm, asm-util, asm-tree -->
		</dependency>
		
		<dependency org="com.sun.jersey.contribs" name="jersey-guice" rev="1.19.4"
					conf="compile->compile,master;runtime->runtime">
			<exclude org="com.google.inject.extensions" name="guice-servlet" />
		</dependency>
	 
		<!-- ============================================================================================================================== -->
		<!-- SPRING																		                                                    -->
		<!-- ============================================================================================================================== -->	
		<!--<dependency org="org.springframework" name="spring-web" rev="4.2.4.RELEASE"
						conf="compile->compile,master;runtime->runtime" />-->
	 
	</dependencies>
	
</ivy-module>
